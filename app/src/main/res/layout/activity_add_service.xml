<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/companyNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company Name" />

    <Spinner
        android:id="@+id/serviceTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Service Type" />

    <ImageView
        android:id="@+id/companyImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp" />


    <Button
        android:id="@+id/addImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Image" />

    <Button
        android:id="@+id/addServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Service" />
    <Button
        android:id="@+id/viewServicesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Services"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/viewBookingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Booked Service Location"
        android:layout_below="@id/addServiceButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</LinearLayout>
